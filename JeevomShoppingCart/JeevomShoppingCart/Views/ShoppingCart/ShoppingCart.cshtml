@model JeevomShoppingCard.Models.ShoppingCart

@{
    ViewBag.Title = "ShoppingCart";
}
<hgroup class="title">
    <h1>@ViewBag.userName below are your shopping cart details</h1>
    
</hgroup>
<div>@ViewBag.message</div>

<table>
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>
                @item.ProductName
            </td>
            <td>
               @item.Price
            </td>
            <td>
               @item.UnitCount
            </td>
            <td>
                <a href="#">Remove from cart</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td>
        </td>
        <td>
        </td>
        <td id="cart-total">
            @Model.CartTotalPrice
        </td>
    </tr>
</table>
 <button data-bind="click: placeOrder, enable: !isCartCancled()">Place Order </button>
<button data-bind="click: cancelCart, enable: !isCartCancled()">Cancel Order </button>
<br />
<br />
<br />
@Html.ActionLink("Go To Home", "Index", "Home");
